<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="387dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/StudentNaamText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/studentennaam" />

            <EditText
                android:id="@+id/StudentNaamEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/DateOfIncidentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_of_incident" />

            <EditText
                android:id="@+id/DateOfIncidentEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/TimeOfIncidentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_of_incident" />

            <EditText
                android:id="@+id/TimeOfIncidentEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/InjuriesDamageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/injuries_damage" />

            <EditText
                android:id="@+id/InjuriesDamageEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/IncidentDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/incident_details" />

            <EditText
                android:id="@+id/IncidentDetailsEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/ActionTakenIncidentReportText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_taken_incident_report" />

            <EditText
                android:id="@+id/ActionTakenIncidentReportEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/NotesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes" />

            <EditText
                android:id="@+id/NotesEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SubmitBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/submit" />

                <Button
                    android:id="@+id/GoBackBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="toHome"
                    android:text="@string/go_back" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>