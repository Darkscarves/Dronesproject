                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/postion_easy_accessible_amp_inform_crew_of_location" />

                    <TextView
                        android:id="@+id/PositionEasyAccesText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/postion_easy_accessible_amp_inform_crew_of_location" />

                    <TextView
                        android:id="@+id/PositionReqText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
