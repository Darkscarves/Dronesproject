                    <TextView
                        android:id="@+id/RecordFlightText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/record_flight_time_details_in_pilot_logbook_amp_battery_logbook" />

                    <TextView
                        android:id="@+id/SwitchOffText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/switch_off_transmitter" />
                    <TextView
                        android:id="@+id/StopRecText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/stop_recording_and_switch_off" />

                    <TextView
                        android:id="@+id/ChechForDamText"
