                    <CheckBox
                        android:id="@+id/BatteryCBox"
                        android:layout_width="match_parent"
                        android:layout_height="175dp" />

                    <CheckBox
                        android:id="@+id/MemoryCardCBox"
                        android:layout_width="match_parent"
                        android:layout_height="65dp" />

                    <CheckBox
                        android:id="@+id/ReviewCBox"
                        android:layout_width="match_parent"
                        android:layout_height="65dp" />
