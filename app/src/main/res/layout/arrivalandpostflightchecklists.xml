                        android:layout_width="match_parent"
                        android:layout_height="65dp" />
                    <CheckBox
                        android:id="@+id/TouchdownCBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <CheckBox
                        android:id="@+id/PowerDownCBox"
                        android:layout_width="match_parent"
                        android:layout_height="65dp" />

                    <CheckBox
