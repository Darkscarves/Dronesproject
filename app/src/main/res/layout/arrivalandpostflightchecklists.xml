                    <TextView
                        android:id="@+id/ConfirmFlightText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/confirm_flight_plan_amp_brief_crew_observer_amp_client" />

                    <TextView
                        android:id="@+id/UnloadCheckText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/unload_amp_check_airframe_for_any_damage_in_transit" />

                    <TextView
                        android:id="@+id/AttachToText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/attach_to_platform_amp_fit_safety_lanyard" />

                    <TextView
                        android:id="@+id/InsertAVText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/insert_a_v_plug_and_secure" />

                    <TextView
                        android:id="@+id/CheckSecuringText"
