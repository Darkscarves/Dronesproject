                    <TextView
                        android:id="@+id/AVMonitorText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/a_v_monitor" />

                    <TextView
                        android:id="@+id/CrewidentifiText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/crew_identification_badges" />

                    <TextView
                        android:id="@+id/HardHatText"
