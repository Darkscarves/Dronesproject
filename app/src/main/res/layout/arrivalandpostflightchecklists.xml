                        android:layout_height="50dp"
                        android:text="@string/site_survey" />

                    <TextView
                        android:id="@+id/FligtPlanText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="@string/flight_plan_brief" />

                    <TextView
                        android:id="@+id/AirframeText"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
